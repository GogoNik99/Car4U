@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" />
                <label asp-for="Input.FirstName" class="text-dark"></label>
                <span asp-validation-for="Input.FirstName" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" />
                <label asp-for="Input.LastName" class="text-dark"></label>
                <span asp-validation-for="Input.LastName" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="text-dark"></label>
                <span asp-validation-for="Input.Email" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="text-dark"></label>
                <span asp-validation-for="Input.Password" class="text-dark"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control"  autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="text-dark"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-dark"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
