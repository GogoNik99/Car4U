@model VehicleFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ModelName"></label>
                <input asp-for="ModelName" class="form-control" placeholder="Model...">
                <span asp-validation-for="ModelName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelTypeId"></label>
                <select asp-for="FuelTypeId" class="form-control">
                    @foreach (var fuelType in Model.FuelTypes)
                    {
                            <option value="@fuelType.Id">@fuelType.Name</option>
                    }
                </select>
                <span asp-validation-for="FuelTypeId" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Manifacturer"></label>
                <input asp-for="Manifacturer" class="form-control" placeholder="Place of Manifacture">
                <span asp-validation-for="Manifacturer" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price in BGN">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <p></p>
            <div class="form-control-file">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" type="file" class="form-control" id="formFile">
                <span asp-validation-for="Image" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>